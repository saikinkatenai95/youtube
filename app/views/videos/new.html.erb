<div class=wrapper>
  <div class=form-space>
    <%= form_with model: @video, method: :post, class: "form", local: true do |f| %>
      <%= f.text_field :firstword, class: "searchbox", placeholder: "第一検索キーワードを入力" %>
      <%= f.text_field :secondword, class: "searchbox", placeholder: "第二検索キーワードを入力" %>
      <%= f.collection_select(:choice_id, Choice.all, :id, :name, {}, {class:"video-select"}) %>
      <%= f.submit "検索", class: "searchbox-submit" %>
    <% end %>
  </div>
</div>

